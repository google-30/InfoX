                })
    }

    function fnShowHideAll()
    {
        //alert("fnShowHideAll");
        var oTable = $('#Workersdata').dataTable();
        for (var i = 0; i < 34; i++)
        {
            var bVis = oTable.fnSettings().aoColumns[i].bVisible;
            oTable.fnSetColumnVis(i, true);
        }
    }
