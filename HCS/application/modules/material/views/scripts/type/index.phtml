$("#type").change(function() {
    var type = $(this).val();
    //alert("type="+type);
    var prop = (type=="0") ? true : false;
    if(prop == true)
    {    
        $('#mainselect').hide();
    }
    else
    {
        $('#mainselect').show();
    }    
});

$('#anytype').change(function() {    
    var id = $(this).val();
    //alert("type id="+id);
    if(id=="0")    
    {
        $('#editchs').val("");
        $('#editeng').val("");
        return;
    }

    $.post("/material/type/posttype", { id: id }, 
    function(data) {
        //alert("");
        console.log(data);
        var typechs = "";
        var typeeng = "";        
        {
            var jsonobj = jQuery.parseJSON(data);
            typechs = jsonobj.typechs;
            typeeng = jsonobj.typeeng;
            //alert("typechs="+typechs);
        }

        $('#editchs').val(typechs);
        $('#editeng').val(typeeng);
        $('#editid').val(id);
    });
});

function updatetype()
{
    //alert("updatetype");
    var id = $("#anytype").val();
    //alert("type id="+id);
    if(id==0)    
    {
        alert("请选择类型");
        return;
    }

    var typechs = $('#editchs').val();
    var typeeng = $('#editeng').val();    

    if(typechs == "")
    {
        alert("请填写类型");  
        return;      
    }

    $.post("/material/type/edit", { id: id, typechs:typechs, typeeng:typeeng }, 
    function(data) {
        console.log(data);
        alert(data);
        
        window.location.reload();
    });

}
</script>

