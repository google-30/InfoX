            <a href="<?php echo  '/service/index/catalog/';?>" class="ui-btn-active"><?php echo $this->translate("All");?></a>
        </li>
    <?php else:?>
        <li>
            <a href="<?php echo  '/service/index/catalog/';?>"><?php echo $this->translate("All");?></a>
        </li>
    <?php endif;?>
