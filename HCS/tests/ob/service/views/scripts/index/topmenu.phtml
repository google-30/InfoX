    <?php if($this->selected == $c['id']):?>
        <li class="selected">
            <a href="<?php echo  '/service/index/catalog/cid/'.$c['id'];?>" class="ui-btn-active"><?php echo $this->translate($c['name']);?></a>
        </li>
    <?php else: ?>    
        <li>
            <a href="<?php echo  '/service/index/catalog/cid/'.$c['id'];?>"><?php echo $this->translate($c['name']);?></a>
        </li>
    <?php endif;?>
    <?php endforeach;?>
    </ul>
</div>
<?php endif;?>
